<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#756987">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/base_currency_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:text="Base Currency(3 letters):"/>

    <EditText
        android:id="@+id/base_currency_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base_currency_title"
        android:maxLength="3"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:maxWidth="200dp"
        android:minWidth="190dp"
        android:textColor="@color/white"
        android:textColorLink="#000000"
        />

    <TextView
        android:id="@+id/target_currency_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:text="Target Currency(3 letters):"
        android:layout_below="@id/base_currency_edit_text"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/target_currency_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/target_currency_title"
        android:maxLength="3"
        android:layout_marginStart="15dp"
        android:maxWidth="200dp"
        android:minWidth="190dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"
        android:textColorLink="#000000"
        android:layout_marginBottom="15dp"/>




</RelativeLayout>